{
  "bootstrap": false,
  "bootstrap_expect": 3,
  "server": true,
  "datacenter": "{{ ansible_ec2_placement_region }}",
  "data_dir": "{{ consul_data_dir }}",
  "log_level": "INFO",
  "enable_syslog": true,
  "node_name": "{{ ansible_hostname }}",
  "encrypt": "{{ consul_encryption_key }}",
  "leave_on_terminate": true,
  "bind_addr": "{{ ansible_ec2_local_ipv4 }}",
  "retry_join_ec2": {
    "region": "{{ ansible_ect_placement_region }}",
    "tag_key": "consul-dc",
    "tag_value": "consul-{{ ansible_ec2_placement_region}}"
  }
}